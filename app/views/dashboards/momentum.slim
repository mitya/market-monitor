- page_title! "Today #{current_currency}"
- fields = %i[change last rel_volume volume]

main.container-fluid
  .row
    - if current_market == 'rub'
      .col-2
        = render 'signals_grouped'
    .col-2
      = render 'level_hits'
    .col-2
      = render 'instruments_top', rows: @top_gainers,    fields: %i[change last rel_volume], muted: :ignored?, title: 'Gainers'
      = render 'instruments_top', rows: @top_losers,     fields: %i[change last rel_volume], muted: :ignored?, title: 'Losers'
    .col-3
      = render 'instruments_top', rows: @recent_gainers, fields: %i[gain_in_15 gain_in_60 change_since_today_low last rel_volume], muted: :ignored?, title: 'Gainers', sort_param: 'gainers_sort_period'
      = render 'instruments_top', rows: @recent_losers,  fields: %i[loss_in_15 loss_in_60 change_since_today_high last rel_volume], muted: :ignored?, title: 'Losers', sort_param: 'gainers_sort_period'
    .col-2
      = render 'instruments_top', rows: @volume_gainers, fields: %i[change rel_volume volume], muted: :ignored?, title: 'Vol. Gainers'
