  - if local_assigns[:header] != false
    thead.table-dark
      tr
        = th :icon
        = th :ticker, copy_tickers_button(candles.pluck(:ticker), local_assigns[:title]), sort: false
        = th :change, 'Ycâ€‰ï¹ª', class: 'money-cell'
