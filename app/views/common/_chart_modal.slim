<div class="modal" tabindex="-1" id="chart-modal">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="chart-controls">

        </div>
        <div id="the-chart"></div>
        <div id="volume-chart"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-dark x-next-chart x-change-chart">Next ↑</button>
        <button type="button" class="btn btn-dark x-prev-chart x-change-chart">Prev ↓</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        = link_to 'TradingView', '#', target: '_blank', tabindex: '-1', class: 'btn btn-primary tv-link'
      </div>
    </div>
  </div>
</div>
